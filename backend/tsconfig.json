{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext",
    "types": ["node"],
    "paths": {
      "~/*": ["./src/*"],
      "~/lambda/*": ["./src/lambda/*"],
      "~/models/*": ["./src/models/*"]
    }
  },
  "include": ["./src/**/*"]
}
